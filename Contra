import sqlite3

def mostrar_usuarios_registrados():
    conexion = sqlite3.connect('usuarios.db')
    cursor = conexion.cursor()
    cursor.execute("SELECT nombre_usuario, clave_cifrada FROM tabla_usuarios")
    filas = cursor.fetchall()
    conexion.close()

    print("\nðŸ“‹ Usuarios registrados:")
    for usuario, hash_clave in filas:
        print(f"Usuario: {usuario} â†’ Hash de contraseÃ±a: {hash_clave}")

# Llama la funciÃ³n para ver los usuarios registrados
mostrar_usuarios_registrados()
